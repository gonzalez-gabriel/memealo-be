{
  "name": "memealo-backend",
  "version": "1.0.0",
  "description": "API and Socket server for Memealo",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsup src/index.ts --watch",
    "build": "tsup",
    "start": "node ./dist/index.js",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.{js,ts}'",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
    "test:integration": "vitest -c ./vitest.config.integration.ts"
  },
  "keywords": [
    "memealo",
    "backend",
    "api",
    "socket",
    "typescript",
    "prisma"
  ],
  "author": "Primsa Studio",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "2.4.5",
    "@types/cors": "2.8.17",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.20",
    "@types/jsonwebtoken": "9.0.4",
    "@types/node": "20.8.8",
    "@typescript-eslint/eslint-plugin": "6.12.0",
    "@typescript-eslint/parser": "6.13.0",
    "@vitest/ui": "0.34.6",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "40.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-n": "16.3.1",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "prettier": "3.1.0",
    "prisma": "5.6.0",
    "tsup": "8.0.1",
    "typescript": "5.3.2",
    "vitest": "0.34.6",
    "vitest-mock-extended": "1.3.1"
  },
  "dependencies": {
    "@prisma/client": "5.4.2",
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-jwt": "^8.4.1",
    "jsonwebtoken": "9.0.2",
    "socket.io": "^4.7.2",
    "zod": "3.22.4"
  }
}
